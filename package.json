    "hot-reload",
    "snabbdom"
  ],
  "author": "des-des",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/des-des/hotloader/issues"
  },
  "homepage": "https://github.com/des-des/hotloader#readme",
  "dependencies": {
    "chokidar": "^1.7.0",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "snabbdom": "^0.6.9",
    "snabbdom-virtualize": "^0.6.0",
    "socket.io-client": "^2.0.3",
    "watchify": "^3.9.0",
    "browserify": "^14.4.0"
  }
