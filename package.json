{
  "name": "hotloader",
  "version": "0.0.1",
  "description": "simple lib for fast html hotloading",
  "main": "index.js",
  "files": [
    "index.js",
    "bundle.js"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
