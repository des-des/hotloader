    "publish": "npm run build && git add -f bundle.js && git commit -m \"publish\" && npm run publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/des-des/hotloader.git"
  },
  "keywords": [
    "virtual-dom",
